# WriteWave Infrastructure Environment Variables
# =============================================

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL
POSTGRES_PASSWORD=writewave_postgres_password_2024
REPLICATION_PASSWORD=writewave_replication_password_2024

# ClickHouse
CLICKHOUSE_PASSWORD=writewave_clickhouse_password_2024

# Redis
REDIS_PASSWORD=writewave_redis_password_2024

# ===========================================
# MESSAGE QUEUE CONFIGURATION
# ===========================================

# RabbitMQ
RABBITMQ_USER=writewave
RABBITMQ_PASSWORD=writewave_rabbitmq_password_2024
RABBITMQ_ERLANG_COOKIE=writewave_erlang_cookie_2024

# Kafka
KAFKA_BROKERS=kafka-1:9092,kafka-2:9093,kafka-3:9094

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# JWT
JWT_SECRET=writewave_jwt_secret_key_2024_change_in_production

# API Keys
API_KEY_USER_SERVICE=user_service_api_key_2024
API_KEY_CONTENT_SERVICE=content_service_api_key_2024
API_KEY_PROGRESS_SERVICE=progress_service_api_key_2024
API_KEY_COMMUNITY_SERVICE=community_service_api_key_2024
API_KEY_NOTIFICATION_SERVICE=notification_service_api_key_2024
API_KEY_ANALYTICS_SERVICE=analytics_service_api_key_2024

# ===========================================
# MONITORING CONFIGURATION
# ===========================================

# Grafana
GRAFANA_PASSWORD=writewave_grafana_password_2024

# Prometheus
PROMETHEUS_RETENTION_TIME=200h

# ===========================================
# STORAGE CONFIGURATION
# ===========================================

# MinIO
MINIO_ACCESS_KEY=writewave_minio_access_key
MINIO_SECRET_KEY=writewave_minio_secret_key_2024

# ===========================================
# EXTERNAL SERVICES
# ===========================================

# Email Service
SENDGRID_API_KEY=your_sendgrid_api_key_here
AWS_SES_ACCESS_KEY_ID=your_aws_ses_access_key_here
AWS_SES_SECRET_ACCESS_KEY=your_aws_ses_secret_key_here
AWS_SES_REGION=us-east-1

# SMS Service
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Push Notifications
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:admin@writewave.com

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Environment
NODE_ENV=development
LOG_LEVEL=debug

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# ===========================================
# PRODUCTION CONFIGURATION
# ===========================================

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/writewave.crt
SSL_KEY_PATH=/etc/ssl/private/writewave.key

# Domain
DOMAIN=writewave.com
API_DOMAIN=api.writewave.com

# ===========================================
# BACKUP CONFIGURATION
# ===========================================

# Backup Retention
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# S3 Backup
AWS_S3_BACKUP_BUCKET=writewave-backups
AWS_S3_BACKUP_REGION=us-east-1
AWS_S3_BACKUP_ACCESS_KEY_ID=your_s3_backup_access_key_here
AWS_S3_BACKUP_SECRET_ACCESS_KEY=your_s3_backup_secret_key_here

# ===========================================
# FEATURE FLAGS
# ===========================================

# Service Features
FEATURE_USER_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=true
FEATURE_PASSWORD_RESET=true
FEATURE_SOCIAL_LOGIN=true
FEATURE_TWO_FACTOR_AUTH=false

FEATURE_CONTENT_CREATION=true
FEATURE_CONTENT_MODERATION=true
FEATURE_CONTENT_SEARCH=true
FEATURE_CONTENT_RECOMMENDATIONS=true

FEATURE_PROGRESS_TRACKING=true
FEATURE_ACHIEVEMENTS=true
FEATURE_LEADERBOARDS=true
FEATURE_STREAKS=true

FEATURE_COMMUNITY_FORUMS=true
FEATURE_COMMUNITY_CHAT=true
FEATURE_COMMUNITY_EVENTS=true
FEATURE_COMMUNITY_MODERATION=true

FEATURE_NOTIFICATIONS_EMAIL=true
FEATURE_NOTIFICATIONS_PUSH=true
FEATURE_NOTIFICATIONS_SMS=false
FEATURE_NOTIFICATIONS_IN_APP=true

FEATURE_ANALYTICS_DASHBOARD=true
FEATURE_ANALYTICS_REPORTS=true
FEATURE_ANALYTICS_AB_TESTING=true
FEATURE_ANALYTICS_PREDICTIVE=true

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================

# Connection Pooling
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# Caching
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_EVENTS_PER_MINUTE=10000
RATE_LIMIT_API_CALLS_PER_MINUTE=1000

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log Levels
LOG_LEVEL_USER_SERVICE=debug
LOG_LEVEL_CONTENT_SERVICE=debug
LOG_LEVEL_PROGRESS_SERVICE=debug
LOG_LEVEL_COMMUNITY_SERVICE=debug
LOG_LEVEL_NOTIFICATION_SERVICE=debug
LOG_LEVEL_ANALYTICS_SERVICE=debug

# Log Rotation
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# ===========================================
# HEALTH CHECK CONFIGURATION
# ===========================================

# Health Check Intervals
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=5s
HEALTH_CHECK_RETRIES=3

# ===========================================
# METRICS CONFIGURATION
# ===========================================

# Metrics Collection
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Custom Metrics
METRICS_USER_REGISTRATIONS=true
METRICS_CONTENT_CREATIONS=true
METRICS_PROGRESS_UPDATES=true
METRICS_COMMUNITY_INTERACTIONS=true
METRICS_NOTIFICATION_DELIVERIES=true
METRICS_ANALYTICS_EVENTS=true
