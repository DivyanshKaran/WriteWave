{
  "dashboard": {
    "id": null,
    "title": "WriteWave Business Metrics",
    "tags": ["writewave", "business", "metrics"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "1m",
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "User Registrations",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(user_registrations_total[24h]))",
            "legendFormat": "Total Registrations (24h)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Active Users",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(active_users_total)",
            "legendFormat": "Active Users"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Content Creations",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(content_creations_total[24h]))",
            "legendFormat": "Content Creations (24h)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "Progress Updates",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(progress_updates_total[24h]))",
            "legendFormat": "Progress Updates (24h)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 5,
        "title": "User Registration Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(user_registrations_total[1h])",
            "legendFormat": "Registrations/hour"
          }
        ],
        "yAxes": [
          {
            "label": "Registrations/hour",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 6
        }
      },
      {
        "id": 6,
        "title": "User Churn Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(user_churn_total[1h])",
            "legendFormat": "Churn/hour"
          }
        ],
        "yAxes": [
          {
            "label": "Churn/hour",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 6
        }
      },
      {
        "id": 7,
        "title": "Content Creation by Type",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (content_type) (increase(content_creations_total[24h]))",
            "legendFormat": "{{content_type}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 14
        }
      },
      {
        "id": 8,
        "title": "User Engagement",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(user_sessions_total[1h])",
            "legendFormat": "Sessions/hour"
          },
          {
            "expr": "rate(user_actions_total[1h])",
            "legendFormat": "Actions/hour"
          }
        ],
        "yAxes": [
          {
            "label": "Events/hour",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 14
        }
      },
      {
        "id": 9,
        "title": "Feature Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(feature_usage_total[1h])",
            "legendFormat": "{{feature_name}}"
          }
        ],
        "yAxes": [
          {
            "label": "Usage/hour",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 14
        }
      },
      {
        "id": 10,
        "title": "Revenue Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(revenue_total[1h])",
            "legendFormat": "Revenue/hour"
          },
          {
            "expr": "rate(subscription_upgrades_total[1h])",
            "legendFormat": "Upgrades/hour"
          }
        ],
        "yAxes": [
          {
            "label": "USD/hour",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 22
        }
      },
      {
        "id": 11,
        "title": "Customer Satisfaction",
        "type": "graph",
        "targets": [
          {
            "expr": "avg_over_time(customer_satisfaction_score[1h])",
            "legendFormat": "Satisfaction Score"
          }
        ],
        "yAxes": [
          {
            "label": "Score (1-5)",
            "min": 1,
            "max": 5
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 22
        }
      },
      {
        "id": 12,
        "title": "Retention Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(user_retention_total[1h]) / rate(user_registrations_total[1h]) * 100",
            "legendFormat": "Retention Rate %"
          }
        ],
        "yAxes": [
          {
            "label": "Percentage",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 30
        }
      },
      {
        "id": 13,
        "title": "Conversion Funnel",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(funnel_visitors_total[1h])",
            "legendFormat": "Visitors"
          },
          {
            "expr": "rate(funnel_signups_total[1h])",
            "legendFormat": "Signups"
          },
          {
            "expr": "rate(funnel_active_users_total[1h])",
            "legendFormat": "Active Users"
          },
          {
            "expr": "rate(funnel_paying_users_total[1h])",
            "legendFormat": "Paying Users"
          }
        ],
        "yAxes": [
          {
            "label": "Users/hour",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 30
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "time_range",
          "type": "interval",
          "query": "1m,5m,15m,30m,1h,6h,12h,1d,7d,30d",
          "current": {
            "text": "1h",
            "value": "1h"
          }
        },
        {
          "name": "content_type",
          "type": "query",
          "query": "label_values(content_creations_total, content_type)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Business Events",
          "datasource": "Prometheus",
          "expr": "changes(user_registrations_total[1m]) > 0",
          "iconColor": "green",
          "enable": true
        },
        {
          "name": "Marketing Campaigns",
          "datasource": "Prometheus",
          "expr": "changes(content_creations_total[1m]) > 0",
          "iconColor": "blue",
          "enable": true
        }
      ]
    }
  }
}
