# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/writewave_content?schema=public"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Server Configuration
PORT=8002
NODE_ENV="development"
API_VERSION="v1"

# File Upload Configuration
MAX_FILE_SIZE=10485760 # 10MB
UPLOAD_PATH="./uploads"
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/webp,image/gif"
ALLOWED_AUDIO_TYPES="audio/mpeg,audio/wav,audio/ogg,audio/mp4"
ALLOWED_VIDEO_TYPES="video/mp4,video/webm,video/ogg"

# Media Storage Configuration
MEDIA_BASE_URL="http://localhost:8002/media"
THUMBNAIL_SIZE=300
IMAGE_QUALITY=85

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN="http://localhost:3000,https://writewave.app"
CORS_CREDENTIALS=true

# Scheduling
ENABLE_CRON=false

# Optional dependencies
OPTIONAL_REDIS=false
OPTIONAL_KAFKA=false

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="logs/content-service.log"

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000 # 30 seconds

# Search Configuration
SEARCH_RESULTS_LIMIT=50
SEARCH_CACHE_TTL=3600 # 1 hour

# Content Configuration
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Character Data Configuration
HIRAGANA_COUNT=46
KATAKANA_COUNT=46
KANJI_LEVELS="N5,N4,N3,N2,N1"

# Vocabulary Configuration
VOCABULARY_CATEGORIES="food,travel,family,work,education,health,sports,entertainment,technology,nature,clothing,colors,numbers,time,weather,emotions,actions,adjectives,verbs,nouns,other"

# Lesson Configuration
LESSON_TYPES="character_learning,vocabulary_learning,grammar_learning,reading_practice,listening_practice,writing_practice"

# Cache Configuration
CACHE_TTL=3600 # 1 hour
CACHE_PREFIX="writewave:content:"

# Performance Configuration
QUERY_TIMEOUT=30000 # 30 seconds
MAX_CONCURRENT_UPLOADS=5

# Development Configuration
ENABLE_SWAGGER=true
ENABLE_DEBUG_ROUTES=true
