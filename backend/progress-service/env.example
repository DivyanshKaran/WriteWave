# Progress Service Environment Variables

# Application
NODE_ENV=development
PORT=8003
SERVICE_NAME=progress-service
SERVICE_VERSION=1.0.0

# Database
DATABASE_URL=postgresql://progress_user:progress_password@localhost:5432/progress_db

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
ACCESS_TOKEN_EXPIRATION=15m
REFRESH_TOKEN_EXPIRATION=7d

# XP and Leveling Configuration
XP_BASE_MULTIPLIER=1.0
XP_STREAK_MULTIPLIER=1.5
XP_ACHIEVEMENT_MULTIPLIER=2.0
LEVEL_UP_XP_BASE=100
LEVEL_UP_XP_MULTIPLIER=1.2

# Achievement Configuration
ACHIEVEMENT_CHECK_INTERVAL=300000
ACHIEVEMENT_NOTIFICATION_ENABLED=true

# Streak Configuration
STREAK_FREEZE_LIMIT=3
STREAK_MILESTONE_REWARDS=true
STREAK_RESET_HOUR=0

# Analytics Configuration
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_PROCESSING_INTERVAL=3600000
ANALYTICS_RETENTION_DAYS=365

# Leaderboard Configuration
LEADERBOARD_UPDATE_INTERVAL=300000
LEADERBOARD_CACHE_TTL=300
LEADERBOARD_TOP_COUNT=100

# Performance Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=10000
BATCH_SIZE=100
CONCURRENT_LIMIT=10

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/progress-service.log

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
METRICS_PORT=9090

# External Services
USER_SERVICE_URL=http://localhost:8001
CONTENT_SERVICE_URL=http://localhost:8002
NOTIFICATION_SERVICE_URL=http://localhost:8005

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# WebSocket
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=8004

# Background Jobs
CRON_ENABLED=true
CRON_TIMEZONE=UTC

# Development
DEBUG=false
VERBOSE_LOGGING=false
HOT_RELOAD=true
