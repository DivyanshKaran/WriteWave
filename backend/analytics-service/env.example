# Server Configuration
NODE_ENV=development
PORT=8006
HOST=0.0.0.0

# Scheduling
ENABLE_CRON=false

# Database Configuration
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_DATABASE=analytics
CLICKHOUSE_USERNAME=default
CLICKHOUSE_PASSWORD=

POSTGRES_URL=postgresql://postgres:password@localhost:5432/analytics
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=analytics
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=365
ANALYTICS_BATCH_SIZE=1000
ANALYTICS_FLUSH_INTERVAL=5000
ANALYTICS_MAX_EVENTS_PER_REQUEST=100

# Real-time Configuration
REALTIME_ENABLED=true
REALTIME_PORT=8007
WEBSOCKET_ENABLED=true

# Performance Monitoring
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_SAMPLE_RATE=0.1
PERFORMANCE_THRESHOLD_MS=1000

# Alerting Configuration
ALERTING_ENABLED=true
ALERT_WEBHOOK_URL=
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_SMTP_HOST=
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USERNAME=
ALERT_EMAIL_PASSWORD=
ALERT_EMAIL_FROM=

# A/B Testing Configuration
AB_TESTING_ENABLED=true
AB_TEST_MIN_SAMPLE_SIZE=100
AB_TEST_CONFIDENCE_LEVEL=0.95

# Data Visualization
CHART_GENERATION_ENABLED=true
CHART_CACHE_TTL=3600
REPORT_GENERATION_ENABLED=true
REPORT_STORAGE_PATH=./reports

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_EVENTS_PER_MINUTE=10000

# External Services
USER_SERVICE_URL=http://localhost:8001
CONTENT_SERVICE_URL=http://localhost:8002
PROGRESS_SERVICE_URL=http://localhost:8003
COMMUNITY_SERVICE_URL=http://localhost:8004
NOTIFICATION_SERVICE_URL=http://localhost:8005

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/analytics-service.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Security
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true
API_KEYS=your-api-key-1,your-api-key-2

# Optional dependencies
OPTIONAL_REDIS=false
OPTIONAL_KAFKA=false

# Data Processing
BATCH_PROCESSING_ENABLED=true
BATCH_SIZE=1000
BATCH_TIMEOUT=5000
STREAM_PROCESSING_ENABLED=true

# Machine Learning
ML_ENABLED=true
ML_MODEL_PATH=./models
ML_PREDICTION_CACHE_TTL=3600

# Timezone
DEFAULT_TIMEZONE=UTC
SUPPORTED_TIMEZONES=UTC,America/New_York,Europe/London,Asia/Tokyo

# Feature Flags
FEATURE_REALTIME_DASHBOARD=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_PREDICTIVE_MODELING=true
FEATURE_ANOMALY_DETECTION=true
