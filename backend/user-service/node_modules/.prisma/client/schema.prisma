// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  username        String?   @unique
  password        String?
  firstName       String?
  lastName        String?
  isEmailVerified Boolean   @default(false)
  isActive        Boolean   @default(true)
  lastLoginAt     DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  // OAuth fields
  googleId      String? @unique
  appleId       String? @unique
  oauthProvider String? // 'google', 'apple', null for email/password

  // Relations
  profile            UserProfile?
  settings           UserSettings?
  sessions           Session[]
  emailVerifications EmailVerification[]
  passwordResets     PasswordReset[]
  refreshTokens      RefreshToken[]

  @@index([email])
  @@index([username])
  @@index([googleId])
  @@index([appleId])
  @@index([isActive])
  @@index([createdAt])
  @@map("users")
}

model UserProfile {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  bio             String?
  avatar          String?
  dateOfBirth     DateTime?
  country         String?
  timezone        String?
  language        String    @default("en")
  learningGoals   String[]  @default([])
  difficultyLevel String    @default("beginner") // beginner, intermediate, advanced
  studyTime       Int? // minutes per day
  interests       String[]  @default([])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user_profiles")
}

model UserSettings {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Notification settings
  emailNotifications Boolean @default(true)
  pushNotifications  Boolean @default(true)
  dailyReminders     Boolean @default(true)
  weeklyReports      Boolean @default(true)
  achievementAlerts  Boolean @default(true)

  // Privacy settings
  profileVisibility String  @default("public") // public, friends, private
  showProgress      Boolean @default(true)
  showAchievements  Boolean @default(true)

  // Learning settings
  autoAdvance      Boolean @default(false)
  showHints        Boolean @default(true)
  soundEnabled     Boolean @default(true)
  vibrationEnabled Boolean @default(true)

  // Theme and display
  theme      String  @default("light") // light, dark, auto
  fontSize   String  @default("medium") // small, medium, large
  animations Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user_settings")
}

model Session {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  token          String   @unique
  deviceInfo     String? // JSON string with device information
  ipAddress      String?
  userAgent      String?
  isActive       Boolean  @default(true)
  expiresAt      DateTime
  lastActivityAt DateTime @default(now())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
  @@index([isActive])
  @@map("sessions")
}

model EmailVerification {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  token     String   @unique
  email     String
  isUsed    Boolean  @default(false)
  expiresAt DateTime

  createdAt DateTime @default(now())

  @@index([token])
  @@index([expiresAt])
  @@index([isUsed])
  @@map("email_verifications")
}

model PasswordReset {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  token     String   @unique
  isUsed    Boolean  @default(false)
  expiresAt DateTime

  createdAt DateTime @default(now())

  @@index([token])
  @@index([expiresAt])
  @@index([isUsed])
  @@map("password_resets")
}

model RefreshToken {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  token      String   @unique
  isRevoked  Boolean  @default(false)
  expiresAt  DateTime
  deviceInfo String? // JSON string with device information

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
  @@index([isRevoked])
  @@map("refresh_tokens")
}
